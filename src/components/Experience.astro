---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{hasExperience && (
  <section id="experience" class="py-16 lg:py-24 px-6 lg:px-8" style={`background-color: ${siteConfig.colors.surface}`}>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
        <div class="lg:col-span-4 reveal">
          <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold" style="color: #f1f5f9">
            Trayectoria
          </h2>
          <div class="mt-3 h-0.5 w-16 bar-shimmer rounded-full"></div>
        </div>

        <div class="lg:col-span-8">
          <div class="relative timeline-line pl-8" style={`--accent: ${siteConfig.colors.accent}`}>
            <div class="absolute left-0 top-0 w-0.5 h-full" style={`background-color: ${siteConfig.colors.primaryLight}`}></div>

            {siteConfig.experience.map((exp: any, index: number) => (
              <div class="reveal relative mb-10 last:mb-0" style={`transition-delay: ${index * 0.15}s`}>
                <!-- Timeline dot -->
                <div
                  class="timeline-dot absolute -left-8 top-2 w-4 h-4 rounded-full border-2"
                  style={`border-color: ${siteConfig.colors.accent}; background-color: ${siteConfig.colors.accent}; animation-delay: ${index * 0.2}s`}
                ></div>

                <div
                  class="card-hover p-6 rounded-xl border"
                  style={`background-color: ${siteConfig.colors.primary}; border-color: ${siteConfig.colors.primaryLight}`}
                >
                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-3">
                    <div>
                      <h3 class="text-lg font-bold" style="color: #f1f5f9">{exp.title}</h3>
                      <p class="text-base font-medium" style={`color: ${siteConfig.colors.accent}`}>{exp.company}</p>
                    </div>
                    <span
                      class="text-xs px-3 py-1 rounded-full mt-2 sm:mt-0 w-fit"
                      style={`background-color: ${siteConfig.colors.primaryLight}; color: #94a3b8`}
                    >
                      {exp.dateRange}
                    </span>
                  </div>

                  <ul class="space-y-2">
                    {exp.bullets.map((bullet: string) => (
                      <li class="flex items-start">
                        <span class="inline-block w-1.5 h-1.5 rounded-full mt-2 mr-3 flex-shrink-0" style={`background-color: ${siteConfig.colors.accent}`}></span>
                        <span class="text-sm" style="color: #94a3b8" set:html={bullet} />
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
)}
