---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{hasProjects && (
  <section id="projects" class="py-16 lg:py-24 px-6 lg:px-8" style={`background-color: ${siteConfig.colors.primaryDark}`}>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
        <div class="lg:col-span-4 reveal">
          <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold" style="color: #f1f5f9">
            Servicios
          </h2>
          <div class="mt-3 h-0.5 w-16 bar-shimmer rounded-full"></div>
        </div>

        <div class="lg:col-span-8">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            {siteConfig.projects.map((project: any, index: number) => (
              <div
                class="reveal-scale card-hover p-6 rounded-xl border"
                style={`background-color: ${siteConfig.colors.primary}; border-color: ${siteConfig.colors.primaryLight}; transition-delay: ${index * 0.1}s`}
              >
                <span class="text-sm font-bold" style={`color: ${siteConfig.colors.accent}`}>
                  0{index + 1}
                </span>
                <h3 class="text-lg font-bold mt-2" style="color: #f1f5f9">
                  {project.name}
                </h3>
                <p class="mt-3 text-sm leading-relaxed" style="color: #94a3b8">
                  <Fragment set:html={project.description} />
                </p>
                {project.skills && project.skills.length > 0 && (
                  <div class="flex flex-wrap gap-2 mt-4">
                    {project.skills.map((skill: string) => (
                      <span
                        class="px-2.5 py-1 rounded-lg text-xs font-medium border"
                        style={`border-color: ${siteConfig.colors.primaryLight}; color: #94a3b8`}
                      >
                        {skill}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
)}
