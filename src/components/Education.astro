---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{hasEducation && (
  <section id="education" class="py-16 lg:py-24 px-6 lg:px-8" style={`background-color: ${siteConfig.colors.primaryDark}`}>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
        <div class="lg:col-span-4 reveal">
          <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold" style="color: #f1f5f9">
            Formacion
          </h2>
          <div class="mt-3 h-0.5 w-16 bar-shimmer rounded-full"></div>
        </div>

        <div class="lg:col-span-8">
          <div class="space-y-6">
            {siteConfig.education.map((edu: any, index: number) => (
              <div
                class="reveal card-hover p-6 rounded-xl border"
                style={`background-color: ${siteConfig.colors.primary}; border-color: ${siteConfig.colors.primaryLight}; transition-delay: ${index * 0.1}s`}
              >
                <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-3">
                  <div>
                    <h3 class="text-lg font-bold" style="color: #f1f5f9">{edu.degree}</h3>
                    <p class="text-base" style={`color: ${siteConfig.colors.accent}`}>{edu.school}</p>
                  </div>
                  <span
                    class="text-xs px-3 py-1 rounded-full mt-2 sm:mt-0 w-fit"
                    style={`background-color: ${siteConfig.colors.primaryLight}; color: #94a3b8`}
                  >
                    {edu.dateRange}
                  </span>
                </div>

                {edu.achievements && edu.achievements.length > 0 && (
                  <ul class="space-y-2">
                    {edu.achievements.map((achievement: string) => (
                      <li class="flex items-start">
                        <span class="inline-block w-1.5 h-1.5 rounded-full mt-2 mr-3 flex-shrink-0" style={`background-color: ${siteConfig.colors.accent}`}></span>
                        <span class="text-sm" style="color: #94a3b8" set:html={achievement} />
                      </li>
                    ))}
                  </ul>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
)}
