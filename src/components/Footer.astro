---
import { siteConfig } from "../config";
---

<footer class="border-t" style={`background-color: ${siteConfig.colors.primaryDark}; border-color: ${siteConfig.colors.primaryLight}`}>
  <div class="max-w-6xl mx-auto px-6 lg:px-8 py-12">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-8">
      <div class="flex flex-col gap-3">
        <h3 class="text-xl font-bold" style="color: #f1f5f9">
          {siteConfig.name}
        </h3>
        <p class="text-sm" style="color: #64748b">
          {siteConfig.title}
        </p>
      </div>

      <div class="flex gap-3">
        {siteConfig.social?.email && (
          <a
            href={`mailto:${siteConfig.social.email}`}
            aria-label="Email"
            class="icon-hover w-10 h-10 rounded-full flex items-center justify-center border"
            style={`border-color: ${siteConfig.colors.primaryLight}; color: #94a3b8`}
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </a>
        )}
        {siteConfig.social?.instagram && (
          <a href={siteConfig.social.instagram} target="_blank" rel="noopener noreferrer" aria-label="Instagram"
            class="icon-hover w-10 h-10 rounded-full flex items-center justify-center border"
            style={`border-color: ${siteConfig.colors.primaryLight}; color: #94a3b8`}>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4m0 4a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z" />
              <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" /><path d="M16.5 7.5l0 .01" />
            </svg>
          </a>
        )}
        {siteConfig.social?.linkedin && (
          <a href={siteConfig.social.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn"
            class="icon-hover w-10 h-10 rounded-full flex items-center justify-center border"
            style={`border-color: ${siteConfig.colors.primaryLight}; color: #94a3b8`}>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        )}
        {siteConfig.social?.phone && (
          <a href={`https://wa.me/${siteConfig.social.phone.replace(/\D/g, '')}`} target="_blank" rel="noopener noreferrer" aria-label="WhatsApp"
            class="icon-hover w-10 h-10 rounded-full flex items-center justify-center border"
            style={`border-color: ${siteConfig.colors.primaryLight}; color: #94a3b8`}>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
          </a>
        )}
      </div>
    </div>

    <div class="mt-8 pt-8 border-t flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4" style={`border-color: ${siteConfig.colors.primaryLight}`}>
      <p class="text-xs" style="color: #475569">
        &copy; {new Date().getFullYear()} {siteConfig.name}. Todos los derechos reservados.
      </p>
      <p class="text-xs" style="color: #334155">
        Hecho con <span style={`color: ${siteConfig.colors.accent}`}>&hearts;</span> por <a href="https://cofoundy.dev" target="_blank" rel="noopener noreferrer" class="link-underline" style={`color: ${siteConfig.colors.accent}`}>Cofoundy</a>
      </p>
    </div>
  </div>
</footer>
